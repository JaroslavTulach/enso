from Standard.Base import all
from Standard.Test.Test_New import Test


collect_tests = Test.build builder->
    builder.group "Booleans" group_builder->
        group_builder.specify "should allow converting Bools to Text values" <|
            IO.println "First spec"
            True.to_text == "True"

        group_builder.specify "should allow for comparing Bools" <|
            IO.println "Second spec"
            (True == True)


main =
    collect_tests.run_main
